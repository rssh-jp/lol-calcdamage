                    td
                    td #{champ_detail.hp}
                tr
                    td HP REGEN
                    td #{champ.hpregen}
                    td #{champ.hpregenperlevel}
                    td
                tr
                    td MP
                    td #{champ.mp}
                    td #{champ.mpperlevel}
                    td
                    td #{champ_detail.mp}
                tr
                    td MP REGEN
                    td #{champ.mpregen}
                    td #{champ.mpregenperlevel}
                    td
                tr
                    td AD
                    td #{champ.attackdamage}
                    td #{champ.attackdamageperlevel}
                    td
                    td #{champ_detail.attackdamage}
                tr
                    td AR
                    td #{champ.armor}
                    td #{champ.armorperlevel}
                    td
                    td #{champ_detail.armor}
                tr
                    td MR
                    td #{champ.spellblock}
                    td #{champ.spellblockperlevel}
                    td
                    td #{champ_detail.spellblock}
                tr
                    td AS
                    td #{champ.attackspeedoffset + 1}
                    td #{champ.attackspeedperlevel} %
                    td
                    td #{champ_detail.attackspeed}
                tr
                    td CRITICAL
                    td #{champ.crit}
                    td #{champ.critperlevel}
                    td
                    td #{champ_detail.crit}
                tr
                    td MS
                    td #{champ.movespeed}
                    td 
                    td
            label 相手から受けるダメージ
            table(border="1")
                tr
                    td ad damage
                    td #{champ_damage.ad_damage}
    -}
